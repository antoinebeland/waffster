{
  "name": "budgetviz",
  "version": "0.5.0",
  "description": "Budget visualization tool",
  "main": "dist/budgetviz.js",
  "types": "dist/types/main.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "npm run sass-lint && tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "sass-lint": "sass-lint -c .sass-lint.yml -v -q",
    "start": "concurrently \"http-server ./ -s\" \"npm run watch\"",
    "test": "nyc mocha",
    "watch": "rollup -cw"
  },
  "private": true,
  "author": "Antoine BÃ©land",
  "license": "GPL-3.0-only",
  "dependencies": {
    "d3-array": "^1.2.4",
    "d3-collection": "^1.0.7",
    "d3-ease": "^1.0.5",
    "d3-scale": "^2.1.2",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.2.2",
    "d3-simple-gauge": "^1.3.2",
    "d3-tip": "^0.9.1",
    "d3-transition": "^1.1.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/d3": "^5.0.0",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "d3": "^5.7.0",
    "http-server": "^0.11.1",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "rollup": "^0.65.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-scss": "^0.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "sass-lint": "^1.12.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-consistent-codestyle": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": false,
    "instrument": true,
    "sourceMap": true
  }
}
